@model TesterLab.Domain.Models.TestCase

@{
    ViewData["Title"] = "Supprimer cas de test";
}

<h2>Supprimer</h2>
<hr />

<p>Êtes-vous sûr de vouloir supprimer le cas de test <strong>@Model.Name</strong> ?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" asp-route-featureId="@Model.FeatureId" class="btn btn-secondary">Annuler</a>
</form>
