<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-dark mb-0">Scénarios de test</h1>
        <a href="@Url.Action("Create", new { featureId = ViewBag.FeatureId })" class="btn btn-primary mb-3">
            <i class="fas fa-plus me-2"></i> Nouveau scénario
        </a>
    </div>

    <!-- Message flash -->
    @if (!string.IsNullOrEmpty(ViewBag.Success as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check me-2"></i>
            @ViewBag.Success
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Fonctionnalité</th>
                        <th>Criticité</th>
                        <th>Durée estimée</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var test in Model)
                        {
                            <tr>
                                <td>@test.Id</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = test.Id })">
                                        @test.Name
                                    </a>
                                </td>
                                <td>@test.Feature?.Name</td>
                                <td>
                                    <span class="badge bg-@(test.CriticalityLevel >= 4 ? "danger" : test.CriticalityLevel >= 3 ? "warning" : "info")">
                                        @switch (test.CriticalityLevel)
                                        {
                                            case 5:
                                                <text>Critique</text>
                                                ; break;
                                            case 4:
                                                <text>Important</text>
                                                ; break;
                                            case 3:
                                                <text>Normal</text>
                                                ; break;
                                            case 2:
                                                <text>Mineur</text>
                                                ; break;
                                            case 1:
                                                <text>Optionnel</text>
                                                ; break;
                                            default:
                                                <text>-</text>
                                                ; break;
                                        }
                                    </span>
                                </td>
                                <td>@test.EstimatedMinutes min</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <div class="position-">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown">
                                                    ⋮
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li><a class="dropdown-item" href="@Url.Action("Details", new { id = test.Id })">Détails</a></li>
                                                    <li><a class="dropdown-item" href="@Url.Action("Edit", new { id = test.Id })">Modifier</a></li>
                                                    <li><a class="dropdown-item" href="@Url.Action("Duplicate", new { id = test.Id })">Dupliquer</a></li>
                                                    <li><a class="dropdown-item" href="@Url.Action("Steps", new { id = test.Id })">Étapes</a></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = test.Id })">Supprimer</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Aucun scénario trouvé.<br />
                                <a asp-page="Create" class="btn btn-sm btn-success mt-3">Créer un scénario</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
