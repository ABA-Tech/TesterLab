@model TesterLab.Domain.Models.Environment
@{
    ViewData["Title"] = "Détails environnement";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800 mb-0">
            <i class="fas fa-eye text-primary me-2"></i>
            @ViewData["Title"]
        </h1>
        <a asp-action="Index" asp-route-applicationId="@Model.ApplicationId" class="btn btn-secondary">Retour</a>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nom</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">URL</dt>
                <dd class="col-sm-9"><a href="@Model.BaseUrl" target="_blank">@Model.BaseUrl</a></dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Authentification requise</dt>
                <dd class="col-sm-9">@(Model.RequiresAuth ? "Oui" : "Non")</dd>

                <dt class="col-sm-3">Actif</dt>
                <dd class="col-sm-9">@(Model.Active ? "Oui" : "Non")</dd>

                <dt class="col-sm-3">Infos d'accès</dt>
                <dd class="col-sm-9"><pre class="bg-light p-2 rounded">@Model.AccessInfo</pre></dd>

                <dt class="col-sm-3">Créé le</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>
</div>
