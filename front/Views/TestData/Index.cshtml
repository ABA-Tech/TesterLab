@model IEnumerable<TesterLab.Domain.Models.TestData>
@{
    ViewData["Title"] = "Jeux de données";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 text-gray-800 mb-0">
                <i class="fas fa-database text-primary me-2"></i>
                @ViewData["Title"]
            </h1>
            <p class="text-muted">Application : @ViewBag.ApplicationName</p>
        </div>
        <a asp-action="Create" asp-route-applicationId="@ViewBag.ApplicationId"
           class="btn btn-success">
            <i class="fas fa-plus me-2"></i> Nouveau jeu de données
        </a>
    </div>

    <!-- Liste -->
    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted text-center my-4">Aucun jeu de données trouvé.</p>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Type</th>
                            <th>Environnement</th>
                            <th>Template</th>
                            <th>Créé le</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.DataType</td>
                                <td>@item.SpecificEnvironment?.Name ?? "-"</td>
                                <td>
                                    @if (item.IsTemplate)
                                    {
                                        <span class="badge bg-info">Oui</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Non</span>
                                    }
                                </td>
                                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end">
                                    <div class="position-">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown">
                                                ⋮
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="@Url.Action("Details", new { id = item.Id })">Détails</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("Edit", new { id = item.Id })">Modifier</a></li>
                                                @* <li><a class="dropdown-item" href="@Url.Action("Duplicate", new { env = env.Id })">Dupliquer</a></li> *@
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = item.Id })">Supprimer</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
