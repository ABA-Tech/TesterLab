@model TesterLab.Domain.Models.TestData
@{
    ViewData["Title"] = "Supprimer jeu de données";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800 mb-0">
            <i class="fas fa-trash text-danger me-2"></i>
            @ViewData["Title"]
        </h1>
    </div>

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Êtes-vous sûr de vouloir supprimer le jeu de données <strong>@Model.Name</strong> ?
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <a asp-action="Index" asp-route-applicationId="@Model.ApplicationId" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i> Supprimer
            </button>
        </div>
    </form>
</div>
