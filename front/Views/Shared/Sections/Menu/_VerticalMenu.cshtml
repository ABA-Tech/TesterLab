<script>
    $(document).ready(function () {

        $.ajax({
            url: '@Url.Action("GetApplications", "Applications")',
            type: 'GET',
            success: function (data) {
                var $select = $("#selected-app");
                $select.empty(); // on vide d'abord

                $select.append('<option value="">-- Choisir une application --</option>');

                $.each(data, function (i, app) {

                    var selectedAttr = app.selected ? " selected" : "";
                    $select.append('<option value="' + app.id + '"' + selectedAttr + '>' + app.name + '</option>');
                });
            },
            error: function () {
                //alert("Impossible de charger la liste des applications !");
            }
        });

        $("#selected-app").change(function () {
            var appId = $(this).val();

            if (appId) {
                $.ajax({
                    url: '@Url.Action("SelectApplication", "Applications")', // ton action
                    type: 'GET',
                    data: { id: appId },
                    success: function (data) {
                        // Exemple: afficher dans un div
