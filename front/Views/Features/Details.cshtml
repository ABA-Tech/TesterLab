@model TesterLab.Domain.Models.Feature

@{
    ViewData["Title"] = "Détails de la fonctionnalité";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="card p-3">
    <p><strong>Application :</strong> @Model.Application?.Name</p>
    <p><strong>Nom :</strong> @Model.Name</p>
    <p><strong>Description :</strong> @Model.Description</p>
    <p><strong>Icône :</strong> @Model.Icon</p>
    <p><strong>Priorité métier :</strong> @Model.BusinessPriority</p>
    <p><strong>Complexité :</strong> @Model.Complexity</p>
    <p><strong>Actif :</strong> @(Model.Active ? "Oui" : "Non")</p>
    <p><strong>Créé le :</strong> @Model.CreatedAt</p>
    <p><strong>Mis à jour le :</strong> @Model.UpdatedAt</p>
</div>

<div class="mt-3">
    <a href="@Url.Action("Edit","Features", new { id = Model.Id })" class="btn btn-warning">Modifier</a>
    <a href="@Url.Action("Index","Features")" class="btn btn-secondary">Retour</a>
</div>
