@model TesterLab.Models.TestRunDetailsViewModel
@{
    ViewData["Title"] = "Détails de l'exécution";
}

<div class="container-fluid mt-4">
    <!-- En-tête avec informations principales -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center mb-3">
                        <i class="@Model.GetStatusIcon() text-@Model.GetStatusColor() fs-2 me-3"></i>
                        <div>
                            <h2 class="mb-0">@Model.TestRun.Name</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-calendar me-1"></i>
                                Créé le @Model.TestRun.CreatedAt.ToString("dd/MM/yyyy à HH:mm")
                            </p>
                        </div>
                    </div>

                    <div class="d-flex gap-3 flex-wrap">
                        <span class="badge bg-@Model.GetStatusColor() fs-6 px-3 py-2">
                            @Model.TestRun.Status
                        </span>
                        <span class="badge bg-light text-dark fs-6 px-3 py-2">
                            <i class="bi bi-laptop me-1"></i>@Model.TestRun.Browser
                        </span>
                        <span class="badge bg-light text-dark fs-6 px-3 py-2">
                            <i class="bi bi-globe me-1"></i>@Model.TestRun.Environment?.Name
                        </span>
                        <span class="badge bg-light text-dark fs-6 px-3 py-2">
                            <i class="bi bi-gear me-1"></i>@Model.TestRun.ExecutionType
                        </span>
                        @if (Model.TestRun.Headless)
                        {
                            <span class="badge bg-light text-dark fs-6 px-3 py-2">
                                <i class="bi bi-eye-slash me-1"></i>Headless
                            </span>
                        }
                    </div>
                </div>

                <div class="col-md-4 text-end">
                    @if (!string.IsNullOrEmpty(Model.TestRun.ReportPath))
                    {
                        <a asp-action="DownloadReport" asp-route-id="@Model.TestRun.Id"
                           class="btn btn-primary mb-2">
                            <i class="bi bi-file-pdf me-2"></i>Télécharger le rapport
                        </a>
                    }

                    @if (Model.TestRun.Status == "Failed")
                    {
                        <form asp-action="RetryTest" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="testRunId" value="@Model.TestRun.Id" />
                            <button type="submit" class="btn btn-outline-danger mb-2">
                                <i class="bi bi-arrow-clockwise me-2"></i>Relancer
                            </button>
                        </form>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary mb-2">
                        <i class="bi bi-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Métriques de l'exécution -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success fs-2"></i>
                    <h3 class="mt-2 mb-0 text-success">@Model.TestRun.PassedCount</h3>
                    <p class="text-muted mb-0">Tests réussis</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-x-circle text-danger fs-2"></i>
                    <h3 class="mt-2 mb-0 text-danger">@Model.TestRun.FailedCount</h3>
                    <p class="text-muted mb-0">Tests échoués</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-skip-forward text-warning fs-2"></i>
                    <h3 class="mt-2 mb-0 text-warning">@Model.TestRun.SkippedCount</h3>
                    <p class="text-muted mb-0">Tests ignorés</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-stopwatch text-info fs-2"></i>
                    <h3 class="mt-2 mb-0">
                        @if (Model.TotalDuration.HasValue)
                        {
                            @Model.TotalDuration.Value.ToString(@"mm\:ss")
                        }
                        else
                        {
                            <span>--:--</span>
                        }
                    </h3>
                    <p class="text-muted mb-0">Durée totale</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Détails des tests exécutés -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check me-2"></i>
                        Détails des tests (@Model.ExecutionDetails.Count)
                    </h5>
                    <div class="progress" style="width: 200px; height: 10px;">
                        <div class="progress-bar bg-@Model.GetStatusColor()"
                             style="width: @Model.TestRun.ProgressPercentage%"></div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.ExecutionDetails.Any())
                    {
                        <div class="accordion accordion-flush" id="testCasesAccordion">
                            @foreach (var detail in Model.ExecutionDetails)
                            {
                                var statusColor = detail.Status == "Passed" ? "success" :
                                detail.Status == "Failed" ? "danger" : "warning";
                                var statusIcon = detail.Status == "Passed" ? "check-circle-fill" :
                                detail.Status == "Failed" ? "x-circle-fill" : "skip-forward-circle";

                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button @(detail.Status == "Failed" ? "" : "collapsed")"
                                                type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#testCase-@detail.TestCaseId">
                                            <div class="d-flex align-items-center w-100 me-3">
                                                <i class="bi bi-@statusIcon text-@statusColor fs-5 me-3"></i>
                                                <div class="flex-grow-1">
                                                    <strong>@detail.TestCaseName</strong>
                                                    @if (detail.Duration.HasValue)
                                                    {
                                                        <small class="text-muted ms-2">
                                                            <i class="bi bi-stopwatch"></i>
                                                            @detail.Duration.Value.TotalSeconds.ToString("F1")s
                                                        </small>
                                                    }
                                                </div>
                                                <span class="badge bg-@statusColor">@detail.Status</span>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="testCase-@detail.TestCaseId"
                                         class="accordion-collapse collapse @(detail.Status == "Failed" ? "show" : "")"
                                         data-bs-parent="#testCasesAccordion">
                                        <div class="accordion-body">
                                            @if (!string.IsNullOrEmpty(detail.ErrorMessage))
                                            {
                                                <div class="alert alert-danger mb-3">
                                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                    <strong>Erreur:</strong> @detail.ErrorMessage
                                                </div>
                                            }

                                            @if (detail.Steps.Any())
                                            {
                                                <h6 class="mb-3">Étapes d'exécution</h6>
                                                <div class="timeline">
                                                    @foreach (var step in detail.Steps.OrderBy(s => s.Order))
                                                    {
                                                        var stepStatusColor = step.Status == "Passed" ? "success" :
                                                        step.Status == "Failed" ? "danger" :
                                                        step.Status == "Running" ? "primary" : "secondary";
                                                        var stepIcon = step.Status == "Passed" ? "check-circle" :
                                                        step.Status == "Failed" ? "x-circle" :
                                                        step.Status == "Running" ? "hourglass-split" : "circle";

                                                        <div class="timeline-item mb-3 pb-3 border-bottom">
                                                            <div class="d-flex align-items-start">
                                                                <div class="timeline-marker me-3">
                                                                    <i class="bi bi-@stepIcon text-@stepStatusColor fs-5"></i>
                                                                </div>
                                                                <div class="flex-grow-1">
                                                                    <div class="d-flex justify-content-between align-items-start">
                                                                        <div>
                                                                            <span class="badge bg-light text-dark me-2">
                                                                                Étape @step.Order
                                                                            </span>
                                                                            <strong>@step.Action</strong>
                                                                            <span>
                                                                                @step.LogMessage
                                                                            </span>
                                                                            @if (!string.IsNullOrEmpty(step.Target))
                                                                            {
                                                                                <span class="text-muted">sur "@step.Target"</span>
                                                                            }
                                                                        </div>
                                                                        <small class="text-muted">@step.DurationMs ms</small>
                                                                    </div>

                                                                    @if (!string.IsNullOrEmpty(step.ErrorMessage))
                                                                    {
                                                                        <div class="alert alert-danger alert-sm mt-2 mb-2">
                                                                            @step.ErrorMessage
                                                                        </div>
                                                                    }

                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-2">Aucun détail d'exécution disponible</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Panneau latéral -->
        <div class="col-lg-4">
            @if (Model.ScreenshotUrls.Any())
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-images me-2"></i>
                            Captures d'écran (@Model.ScreenshotUrls.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            @foreach (var screenshot in Model.ScreenshotUrls.Take(6))
                            {
                                <div class="col-6">
                                    <button type="button"
                                            class="btn p-0 w-100 screenshot-thumb"
                                            data-bs-toggle="modal"
                                            data-bs-target="#screenshotModal"
                                            data-screenshots='@Newtonsoft.Json.JsonConvert.SerializeObject(new List<string>{screenshot})'>
                                        <img src="@Url.Action("ViewScreenshot", new { runId = Model.TestRun.Id, path = screenshot })"
                                             class="img-fluid rounded border"
                                             alt="Screenshot"
                                             style="max-height: 100px; object-fit: cover; width: 100%;">
                                    </button>
                                </div>
                            }
                        </div>
                        @if (Model.ScreenshotUrls.Count > 6)
                        {
                            <button type="button" class="btn btn-outline-primary btn-sm w-100 mt-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#allScreenshotsModal">
                                Voir toutes les captures (+@(Model.ScreenshotUrls.Count - 6))
                            </button>
                        }
                    </div>
                </div>
            }

            <!-- Logs -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text me-2"></i> Logs d'exécution
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.TestExecutionLog != null)
                    {
                        foreach (var log in Model.TestExecutionLog)
                        {
                            <pre class="bg-dark text-light p-3 rounded" style="max-height: 400px; overflow-y: auto; font-size: 0.8rem;">@log.Message</pre>
                        }
                    }
                    @if (!string.IsNullOrEmpty(Model.ExecutionLogs))
                    {
                        <pre class="bg-dark text-light p-3 rounded" style="max-height: 400px; overflow-y: auto; font-size: 0.8rem;">@Model.ExecutionLogs</pre>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">Aucun log disponible</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour plusieurs captures -->
<div class="modal fade" id="screenshotModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Captures d'écran</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="screenshotCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner" id="carouselScreenshotsContainer">
                        <!-- Images insérées dynamiquement -->
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#screenshotCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#screenshotCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour toutes les captures -->
<div class="modal fade" id="allScreenshotsModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Toutes les captures d'écran</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    @foreach (var screenshot in Model.ScreenshotUrls)
                    {
                        <div class="col-md-4">
                            <img src="@Url.Action("ViewScreenshot", new { runId = Model.TestRun.Id, path = screenshot })"
                                 class="img-fluid rounded border"
                                 alt="Screenshot">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline-item {
        position: relative;
    }

    .timeline-marker {
        min-width: 30px;
    }

    .screenshot-thumb {
        transition: transform 0.2s;
    }

        .screenshot-thumb:hover {
            transform: scale(1.05);
        }

    .alert-sm {
        padding: 0.5rem;
        font-size: 0.875rem;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var screenshotModal = document.getElementById('screenshotModal');
            if (screenshotModal) {
                screenshotModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var screenshotsData = button.getAttribute('data-screenshots');
                    if (!screenshotsData) return;

                    var screenshots = JSON.parse(screenshotsData);
                    var runId = @Model.TestRun.Id;
                    var container = document.getElementById('carouselScreenshotsContainer');
                    container.innerHTML = '';

                    screenshots.forEach((screenshot, index) => {
                        var activeClass = index === 0 ? 'active' : '';
                        var imgUrl = '@Url.Action("ViewScreenshot")?runId=' + runId + '&path=' + encodeURIComponent(screenshot);

                        container.insertAdjacentHTML('beforeend', `
                            <div class="carousel-item ${activeClass}">
                                <img src="${imgUrl}" class="d-block w-100 img-fluid" alt="Screenshot ${index + 1}">
                            </div>
                        `);
                    });
                });
            }

        @if (Model.TestRun.Status == "Running")
        {
            <text>
                    setInterval(function () { location.reload(); }, 5000);
            </text>
        }
        });
    </script>
}
